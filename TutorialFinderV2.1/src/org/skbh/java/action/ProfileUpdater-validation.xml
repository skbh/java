 <!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
    <validators>
    	<field name="firstname">
	    	<field-validator type="requiredstring">
	    	<message>first name can`t be blank</message>
	    	</field-validator>
         </field>
     
         <field name="lastname">
    				<field-validator type="requiredstring">
    				<message>last name can`t be blank</message>
    				</field-validator>
         </field>
         
                   
         <field name="contact">
        				 <field-validator type="requiredstring">
          				 <message>contact Number can`t be blank</message>			
 	     			    </field-validator>
             
    				<field-validator type="regex">
          				 <param name="regex">^[0-9]{10}$</param>
          				 <message>Invalid contact Number(10 digit)</message>			
     			    </field-validator>
    	 </field>

    
         <field name="email">
         			<field-validator type="requiredstring">
    					<message>Email ID  can`t be blank </message>
    				</field-validator>
    				<field-validator type="email">
    					<message>invalid Email ID </message>
    				</field-validator>
         </field>
         
         <field name="country">
    				<field-validator type="requiredstring">
    					<message>country can`t be blank</message>
    				</field-validator>
         </field>
         <field name="address">
    				<field-validator type="requiredstring">
    					<message>address can`t be blank</message>
    				</field-validator>
         </field>
</validators>